<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".makemenu.MakeMenu">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/addmenu"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="메뉴 등록하기"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/menuedit1"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:hint="메뉴를 입력하세요"
                android:gravity="center"
                android:singleLine="true"
                android:text="돈까스"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/menuedit2"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:hint="메뉴를 입력하세요"
                android:text="피자"
                android:singleLine="true"

                android:gravity="center"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/menuedit3"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:hint="메뉴를 입력하세요"
                android:gravity="center"
                android:text="햄버거"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/menuedit4"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:hint="메뉴를 입력하세요"
                android:singleLine="true"
                android:gravity="center"
                android:text="분식"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/menuedit5"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:hint="메뉴를 입력하세요"
                android:singleLine="true"
                android:gravity="center"
                android:text="중국집"
                android:layout_height="50dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/addmenubtn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="메뉴 등록하기"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>